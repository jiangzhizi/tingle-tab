// tingle-style's utils
@require '../node_modules/tingle-style/src/var'

default_color = #757575
default_bgcolor = #fff
default_active_color = #fb8c00
lineColor = #e6e6e6

.tTab
  overflow hidden

.tTabHead
  width 100%
  overflow hidden
  background-color default_bgcolor
  height 49px
  border-top 1px solid lineColor
  border-bottom 1px solid lineColor

.tTabHeadScroll
  //足够大，内部可放置更多 item
  white-space nowrap

.tTabHeadContainer
  height 100%

.tTabHeadItem
  padding 0 12px
  height 49px
  line-height 49px
  overflow hidden
  cursor pointer
  color default_color
  white-space nowrap
  font-size 15px
  &.active
    color #424242
    border-bottom 4px solid default_active_color

.hairline
  .tTabHead
    border-top-width .5px
    border-bottom-width .5px
